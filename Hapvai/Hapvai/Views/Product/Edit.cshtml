@model ProductEditModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Enter Product Name..." />
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" value="@Model.Price" class="form-control" placeholder="Enter Price..." />
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" placeholder="Enter ImageUrl..." />
    </div>
    <div class="form-group">
        <label asp-for="FoodtypeId"></label>
        <select asp-for="FoodtypeId" selected ="@Model.Foodtypes.FirstOrDefault(ft=> ft.Id == Model.FoodtypeId)" class="form-control">
            @foreach (var type in Model.Foodtypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>
    <input id="productId" asp-for="ProductId" value ="@Model.ProductId" type="hidden" value="initialValue" />


    <input type="submit" class="btn btn-primary mt-3" value="Save" />
</form>

