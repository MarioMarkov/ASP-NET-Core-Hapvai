@model ProductFormModel

@{ Layout = null; }

<form method="post" asp-controller="Product" asp-action="Add">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter Product Name..." />
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" step="0.01" asp-for="Price" class="form-control" placeholder="Enter Price..." />
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Enter ImageUrl..." />
    </div>
    <div class="form-group">
        <label asp-for="FoodtypeId"></label>
        <select asp-for="FoodtypeId" class="form-control">
            @foreach (var type in Model.Foodtypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>
    <input  asp-for="RestaurantId" type="hidden" value="@(ViewContext.RouteData.Values["id"])" />
    <input type="submit" class="btn btn-primary mt-3" value="Save" />
</form>