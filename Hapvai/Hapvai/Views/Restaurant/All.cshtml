@model IEnumerable<RestaurantViewModel>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.1s;
        border-radius: 5px; /* 5px rounded corners */
        width:20rem;
        
    }
     
  
    /* Add rounded corners to the top left and the top right corner of the image */
    img {
        border-radius: 5px 5px 0 0;
    }
    .category {
        font-weight: 300;
        display: inline;
    }
    /* [1] The container */
    .img-hover-zoom {
        height: 300px; /* [1.1] Set it as per your need */
        overflow: hidden; /* [1.2] Hide the overflowing of child elements */
    }

        /* [2] Transition property for smooth transformation of images */
        .img-hover-zoom img {
            transition: transform .5s ease;
        }

        /* [3] Finally, transforming the image when container gets hovered */
        .img-hover-zoom:hover img {
            transform: scale(1.3);
        }
    .restaurantName {
        display: inline;
    }
</style>

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Welcome To Hapvai</h1>
        <p class="lead">The best place where you can order food from your favorite restaurants.</p>
        <hr class="my-4">
        <p>Find your favourite place</p>
        <p class="lead">
            <div class="input-group rounded">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                       aria-describedby="search-addon" />
                <span class="input-group-text border-0" id="search-addon">
                    <i class="fas fa-search"></i>
                </span>
            </div>
        </p>
    </div>
    <div class="row">
        @foreach (var restaurant in Model)
        {<div class="col-md-4">

                <div class="card">
                    <div class="img-hover-zoom" >
                        <img src="@restaurant.ImageUrl" style="width:100%"> alt="This zooms-in really well and smooth">
                    </div>
                    <div class="container">
                        <div class="row">
                            <h4 class="col-6 mb-0 restaurantName">@restaurant.Name</h4>
                            <a  asp-controller="Restaurant" asp-action="Show" asp-route-id="@restaurant.Id" class="mt-2 col-6 btn btn-primary">Order</a>
                        </div>
                        <div class="row"> 
                            <p class="col-6 category mb-1">@restaurant.Category</p>
                        </div>
                       
                        
                    </div>
                    
                    
                </div>
            </div>

        } 
    </div>

</div>