@model OrderViewModel
@{
    ViewData["Title"] = "Order";
}


<h1>My Order</h1>
@if (Model == null)
{


    <span>No Items here</span>
}
else
{
    <h2>Order ID : @Model.OrderId</h2>


    <div>

        @foreach (var p in Model.Products)
        {
            <div>
                <img src="@p.ImageUrl" alt="Alternate Text" width="100px" height="100px" />
                <span>@p.Name</span> <span>Price: @p.Price $</span>
            </div>
        }

        <div><span>Total: @Model.Products.Sum(p => p.Price) $</span></div>

        <button>Make Order</button>


    </div>

}

